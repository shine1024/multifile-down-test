<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
</head>
<body>
<h1>{{title}}</h1>
<p>{{message}}</p>
<p>{{secret}}</p>
<img src="{{base64Image}}" alt="{{title}}"></img>
<button id="fileDown">downloadFile__Blob</button>
<button id="fileDownByResponse">donwloadFile__Response</button>

<h2>OTP 인증 테스트</h2>
<form action="/test-otp" method="get">
    <div>
        <label for="secret">Secret:</label>
        <input type="text" id="secret" name="secret" required>
    </div>
    <div>
        <label for="otp">OTP 코드:</label>
        <input type="text" id="otp" name="otp" maxlength="6" required>
    </div>
    <div>
        <button type="submit">OTP 검증</button>
    </div>
</form>

<!-- JavaScript 이벤트 -->
<script>
    document.getElementById("fileDown").addEventListener("click", function () {
        downloadFiles(5);
    });

    document.getElementById("fileDownByResponse").addEventListener("click", function () {
        donwloadFilesByResponse(100);
    });

    function donwloadFilesByResponse(fileCount) {
        for (let i = 1; i <= fileCount; i++) {
            setTimeout(() => {
                window.location.href = '/download-file-response?count=' + i;
            }, i * 10);
        }
    }

    function downloadFiles(fileCount) {
        for (let i = 0; i < fileCount; i++) {
            setTimeout(() => {
                fetch('/download-file')
                        .then(response => {
                            if (!response.ok) {
                                throw new Error(`Failed to download file: ${response.statusText}`);
                            }
                            return response.blob();
                        })
                        .then(blob => {
                            const objectURL = URL.createObjectURL(blob);
                            const link = document.createElement('a');
                            // link.href = objectURL;
                            // link.download = `test_${i + 1}.zip`; // 파일 이름 변경
                            // document.body.appendChild(link);
                            // link.click(); // 다운로드 트리거
                            // document.body.removeChild(link);
                            // URL.revokeObjectURL(objectURL); // URL 해제
                        })
                        .catch(error => {
                            console.error('Error downloading file:', error);
                        });
            }, i * 200);
        }
    }
</script>
</body>
</html>